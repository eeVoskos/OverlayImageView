<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.eevoskos.overlayimageview.sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity" >

    <com.eevoskos.overlayimageview.OverlayImageView
        android:id="@+id/image_top_left"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="top|left"
        android:src="#ff0000"
        app:overlay_gravity="top_left"
        app:overlay_padding="8dp"
        app:overlay_src="@drawable/ic_overlay" />

    <com.eevoskos.overlayimageview.OverlayImageView
        android:id="@+id/image_top_right"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="top|right"
        android:src="#00ff00"
        app:overlay_gravity="top_right"
        app:overlay_padding="8dp"
        app:overlay_src="@drawable/ic_overlay" />

    <com.eevoskos.overlayimageview.OverlayImageView
        android:id="@+id/image_center"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:src="#aaaaaa"
        app:overlay_gravity="center"
        app:overlay_padding="8dp"
        app:overlay_src="@drawable/ic_overlay" />

    <com.eevoskos.overlayimageview.OverlayImageView
        android:id="@+id/image_bottom_left"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="bottom|left"
        android:src="#ff00ff"
        app:overlay_gravity="bottom_left"
        app:overlay_padding="8dp"
        app:overlay_src="@drawable/ic_overlay" />

    <com.eevoskos.overlayimageview.OverlayImageView
        android:id="@+id/image_bottom_right"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="bottom|right"
        android:src="#0000ff"
        app:overlay_gravity="bottom_right"
        app:overlay_padding="8dp"
        app:overlay_src="@drawable/ic_overlay" />

</FrameLayout>